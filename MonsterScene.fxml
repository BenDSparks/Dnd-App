<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane stylesheets="@monsterStyle.css" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MonsterController">
   <children>
      <ScrollPane hbarPolicy="NEVER" prefHeight="700.0" prefWidth="600.0" vbarPolicy="NEVER">
        <content>
          <AnchorPane prefHeight="700.0" prefWidth="600.0">
               <children>
                  <VBox fx:id="vBox" spacing="5.0" styleClass="monsterName">
                     <children>
                        <Label fx:id="monsterNameLabel" text="Monster Name">
                           <font>
                              <Font size="30.0" />
                           </font>
                        </Label>
                        <Label fx:id="sizeTypeAlignmentLabel" text="size type, alignment" />
                        <HBox spacing="5.0" styleClass="stats">
                           <children>
                              <Label text="AC:" />
                              <Label fx:id="acLabel" text="AC#" />
                           </children>
                        </HBox>
                        <HBox spacing="5.0" styleClass="stats">
                           <children>
                              <Label text="HP" />
                              <Label fx:id="hpLabel" text="HP#" />
                           </children>
                        </HBox>
                        <HBox spacing="5.0" styleClass="stats">
                           <children>
                              <Label text="Speed" />
                              <Label fx:id="speedLabel" text="Speed#" />
                           </children>
                        </HBox>
                        <HBox spacing="30.0" styleClass="attibutes">
                           <children>
                              <VBox alignment="CENTER">
                                 <children>
                                    <Label text="Str" />
                                    <Label fx:id="strLabel" text="Str#" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER">
                                 <children>
                                    <Label text="Dex" />
                                    <Label fx:id="dexLabel" text="Dex#" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER">
                                 <children>
                                    <Label text="Con" />
                                    <Label fx:id="conLabel" text="Con#" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER">
                                 <children>
                                    <Label text="Int" />
                                    <Label fx:id="intLabel" text="Int#" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER">
                                 <children>
                                    <Label text="Wis" />
                                    <Label fx:id="wisLabel" text="Wis#" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER">
                                 <children>
                                    <Label text="Cha" />
                                    <Label fx:id="chaLabel" text="Cha#" />
                                 </children>
                              </VBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        <HBox fx:id="savingThrowsHBox" alignment="CENTER_LEFT" maxWidth="580.0" spacing="5.0" styleClass="features">
                           <children>
                              <Label minWidth="-Infinity" prefWidth="95.0" text="Saving Throws:" />
                              <Label fx:id="savingThrowsLabel" text="SavingThrows#s" wrapText="true" />
                           </children>
                        </HBox>
                        <HBox fx:id="skillListHBox" alignment="CENTER_LEFT" maxWidth="580.0" spacing="5.0" styleClass="features">
                           <children>
                              <Label minWidth="-Infinity" prefWidth="36.0" text="Skills:" />
                              <Label fx:id="skillListLabel" text="Skills List" />
                           </children>
                        </HBox>
                        <HBox fx:id="damageVulnerabilitiesHBox" alignment="CENTER_LEFT" maxWidth="580.0" spacing="5.0" styleClass="features">
                           <children>
                              <Label minWidth="-Infinity" prefWidth="141.0" text="Damage Vulnerabilitys:" />
                              <Label fx:id="damageVulnerabilitiesLabel" text="Damage Vulnerabilitys" wrapText="true" />
                           </children>
                        </HBox>
                        <HBox fx:id="damageResistancesHBox" alignment="CENTER_LEFT" maxWidth="580.0" spacing="5.0" styleClass="features">
                           <children>
                              <Label minWidth="-Infinity" prefWidth="132.0" text="Damage Resistances:" />
                              <Label fx:id="damageResistancesLabel" text="Damage Resistances" wrapText="true" />
                           </children>
                        </HBox>
                        <HBox fx:id="damageImmunitiesHBox" alignment="CENTER_LEFT" maxWidth="580.0" spacing="5.0" styleClass="features">
                           <children>
                              <Label minWidth="-Infinity" prefWidth="125.0" text="Damage Immunities:" />
                              <Label fx:id="damageImmunitiesLabel" text="Damage Immunities" wrapText="true" />
                           </children>
                        </HBox>
                        <HBox fx:id="conditionImmunitiesHBox" alignment="CENTER_LEFT" maxWidth="580.0" spacing="5.0" styleClass="features">
                           <children>
                              <Label minWidth="-Infinity" prefWidth="134.0" text="Condition Immunities:" />
                              <Label fx:id="conditionImmunitiesLabel" text="Condition Immunities" wrapText="true" />
                           </children>
                        </HBox>
                        <HBox fx:id="sensesHBox" alignment="CENTER_LEFT" maxWidth="580.0" spacing="5.0" styleClass="features">
                           <children>
                              <Label minWidth="-Infinity" prefWidth="49.0" text="Senses:" />
                              <Label fx:id="sensesLabel" text="SensesList" wrapText="true" />
                           </children>
                        </HBox>
                        <HBox fx:id="languagesHBox" alignment="CENTER_LEFT" maxWidth="580.0" spacing="5.0" styleClass="features">
                           <children>
                              <Label minWidth="-Infinity" prefWidth="71.0" text="Languages:" />
                              <Label fx:id="languagesLabel" text="Languages List" wrapText="true" />
                           </children>
                        </HBox>
                        <HBox fx:id="challengeRatingHBox" alignment="CENTER_LEFT" maxWidth="580.0" spacing="5.0" styleClass="features">
                           <children>
                              <Label minWidth="-Infinity" prefWidth="136.0" text="Challenge Rating(CR):" />
                              <Label fx:id="challengeRatingLabel" text="Challenge Rating #" wrapText="true" />
                           </children>
                        </HBox>
                        <VBox fx:id="abilitiesVBox" spacing="5.0">
                           <children>
                              <HBox>
                                 <children>
                                    <Label text="Special Abilities" />
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                        </VBox>
                        <VBox fx:id="actionsVBox" spacing="5.0">
                           <children>
                              <HBox>
                                 <children>
                                    <Label text="Actions" />
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                        </VBox>
                        <VBox fx:id="legendaryActionsVBox" spacing="5.0">
                           <children>
                              <HBox spacing="5.0">
                                 <children>
                                    <Label text="Legendary Actions" />
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
   </children>
</AnchorPane>
